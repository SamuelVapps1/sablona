<Window x:Class="PetShopLabelPrinter.CopiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Počet kópií" Height="160" Width="300" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="16">
        <TextBlock Text="Počet kópií pre všetky vybrané položky:" Margin="0,0,0,8"/>
        <TextBox x:Name="TxtCopies" Margin="0,0,0,12" Padding="6,4"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="BtnOk_Click" IsDefault="True" Padding="12,8" Margin="0,0,8,0"/>
            <Button Content="Zrušiť" Click="BtnCancel_Click" IsCancel="True" Padding="12,8"/>
        </StackPanel>
    </StackPanel>
</Window>
