<Window x:Class="PetShopLabelPrinter.TemplateSelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vybrať šablónu" Height="170" Width="320" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="16">
        <TextBlock Text="Šablóna štítku" Margin="0,0,0,6"/>
        <ComboBox x:Name="CmbTemplate" DisplayMemberPath="Name" Margin="0,0,0,12"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="BtnOk_Click" IsDefault="True" Padding="12,8" Margin="0,0,8,0"/>
            <Button Content="Zrušiť" Click="BtnCancel_Click" IsCancel="True" Padding="12,8"/>
        </StackPanel>
    </StackPanel>
</Window>
