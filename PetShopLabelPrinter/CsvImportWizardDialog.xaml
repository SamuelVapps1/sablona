<Window x:Class="PetShopLabelPrinter.CsvImportWizardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import z Alfa+ (CSV)" Height="520" Width="620" WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TxtStepTitle" Grid.Row="0" FontWeight="Bold" FontSize="14" Margin="0,0,0,12"/>

        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Padding="12" Margin="0,0,0,12">
            <ContentControl x:Name="StepContent"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnBack" Content="&lt; Späť" Click="BtnBack_Click" Padding="12,6" Margin="0,0,8,0" Visibility="Collapsed"/>
            <Button x:Name="BtnNext" Content="Ďalej &gt;" Click="BtnNext_Click" IsDefault="True" Padding="12,6" Margin="0,0,8,0"/>
            <Button x:Name="BtnImport" Content="Importovať" Click="BtnImport_Click" Padding="12,6" Margin="0,0,8,0" Visibility="Collapsed"/>
            <Button x:Name="BtnCancel" Content="Zrušiť" IsCancel="True" Click="BtnCancel_Click" Padding="12,6"/>
        </StackPanel>
    </Grid>
</Window>
